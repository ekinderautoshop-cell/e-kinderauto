---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProductCard from '../components/ProductCard';
import { products } from '../data/products';
---

<Layout title="E-Kinderauto Shop - Ihre Kinderautos">
	<Header />
	<main class="container mx-auto px-4 py-8">
		<div class="text-center mb-12">
			<h1 class="text-4xl font-bold text-gray-900 mb-4">
				Willkommen im E-Kinderauto Shop
			</h1>
			<p class="text-xl text-gray-600">
				Entdecken Sie unsere Auswahl an hochwertigen Kinderautos
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{products.map((product) => (
				<ProductCard product={product} client:load />
			))}
		</div>
	</main>

	<footer class="bg-gray-800 text-white mt-16 py-8">
		<div class="container mx-auto px-4 text-center">
			<p>&copy; 2024 E-Kinderauto Shop. Alle Rechte vorbehalten.</p>
		</div>
	</footer>
</Layout>
